{
  "name": "personal-identity-platform",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Production-grade personal identity platform with React, TypeScript, and advanced performance optimizations",
  "author": "Mohit Patel",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite --host",
    "generate:rss": "tsx scripts/generate-rss.ts",
    "build": "npm run generate:rss && tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "vite build --mode analyze",
    "clean": "rm -rf dist node_modules/.vite",
    "update-deps": "npm update --save && npm update --save-dev",
    "audit": "npm audit --audit-level=moderate"
  },
  "dependencies": {
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@hookform/resolvers": "^3.9.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/lab": "^7.0.0-beta.17",
    "@mui/material": "^7.3.2",
    "@mui/x-data-grid": "^7.19.0",
    "@sentry/react": "^8.37.1",
    "@supabase/supabase-js": "^2.45.6",
    "@tanstack/react-query": "^5.59.16",
    "@tanstack/react-query-devtools": "^5.59.16",
    "@vercel/analytics": "^1.4.1",
    "axios": "^1.7.7",
    "clsx": "^2.1.1",
    "copy-to-clipboard": "^3.3.3",
    "dayjs": "^1.11.13",
    "framer-motion": "^11.18.2",
    "fuse.js": "^7.0.0",
    "i18next": "^23.16.4",
    "immer": "^10.1.1",
    "lodash-es": "^4.17.21",
    "nanoid": "^5.0.8",
    "notistack": "^3.0.1",
    "react": "^19.1.1",
    "react-confetti": "^6.1.0",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.5",
    "react-error-boundary": "^4.1.2",
    "react-ga4": "^2.1.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.53.2",
    "react-hotkeys-hook": "^4.6.1",
    "react-i18next": "^15.1.1",
    "react-image-crop": "^11.0.7",
    "react-intersection-observer": "^9.13.1",
    "react-lazy-load-image-component": "^1.6.2",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.27.0",
    "react-slick": "^0.30.2",
    "react-syntax-highlighter": "^16.0.0",
    "react-tooltip": "^5.28.0",
    "react-use": "^17.5.1",
    "react-window": "^1.8.10",
    "recharts": "^2.13.3",
    "remark-gfm": "^4.0.0",
    "slick-carousel": "^1.8.1",
    "uuid": "^10.0.0",
    "web-vitals": "^4.2.3",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.48.2",
    "@storybook/addon-a11y": "^8.4.2",
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/addon-interactions": "^8.4.2",
    "@storybook/addon-links": "^8.4.2",
    "@storybook/addon-themes": "^8.4.2",
    "@storybook/react": "^8.4.2",
    "@storybook/react-vite": "^8.4.2",
    "@storybook/test": "^8.4.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.9.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.1",
    "@types/react-slick": "^0.23.13",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/coverage-v8": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "dotenv": "^16.4.5",
    "happy-dom": "^20.0.8",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "msw": "^2.6.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "storybook": "^8.4.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --apply --no-errors-on-unmatched",
      "vitest related --run --reporter=verbose"
    ],
    "*.{json,md,yml,yaml}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
